---
import MainLayout from "@layouts/MainLayout.astro";
import Avatar from "@components/Avatar.astro";
import FeaturedCardsLayout from "@layouts/FeaturedCardsLayout.astro";
import FeaturedCard from "@components/FeaturedCard.astro";
const links = await Astro.glob('./links/*.md')
---
<MainLayout title="Socials and Shops Links | Myprimitivedolls">
	<Avatar />
	<FeaturedCardsLayout>
		{
			links.map(link => (
				<FeaturedCard featuredCardTitle={link.frontmatter.linkTitle} featuredCardIcon={link.frontmatter.linkIcon} featuredCardLink={link.frontmatter.linkURL} />
			))
		}
		<!-- <FeaturedCard featuredCardTitle='test' featuredCardIcon='test' featuredCardLink='test' /> -->
	</FeaturedCardsLayout>
</MainLayout>